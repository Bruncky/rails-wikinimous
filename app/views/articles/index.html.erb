<div class="container">
    <h1>Articles</h1>
    <ul>
        <% @articles.each do |article| %>
        <li>
            <h1>
                <%= link_to article.title, article_path(article) %> &#8211
                <a href="<%= article_path(article) %>" data-method="delete">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </h1>
            <p><%= article.content %></p>
        </li>
        <% end %>
    </ul>
    <a class="btn btn-primary" href="http://localhost:3000/articles/new" role="button">Create New Article</a>
</div>
